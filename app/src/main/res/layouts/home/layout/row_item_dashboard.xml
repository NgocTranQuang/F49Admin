    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="@dimen/dp_327">

        <LinearLayout
                android:id="@+id/lnImage"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img_category"
                    android:layout_width="@dimen/dp_218"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/dp_218"
                    android:src="@mipmap/ic_launcher"
                    android:imageUrl="@{item.imageURL}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCateName"/>

            <TextView
                    android:id="@+id/tvCateName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@{item.title}"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/toolbar_half_padding_horizontal"
                    android:textSize="@dimen/dp_30"
                    android:textColor="#555555"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <!--<TextView-->
                    <!--android:id="@+id/tvPrice"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:fontFamily="@font/roboto"-->
                    <!--android:text="@{item.price}"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:text_color="@{item.priceColor}"-->
                    <!--android:gravity="center"-->
                    <!--android:textSize="@dimen/dp_54"-->
                    <!--app:layout_constraintLeft_toLeftOf="parent"-->
                    <!--app:layout_constraintTop_toTopOf="parent"/>-->
        </LinearLayout>

        <TextView
                android:layout_width="@dimen/dp_81"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/lnImage"
                android:text="@{item.notification}"
                android:textSize="@dimen/dp_48"
                android:elevation="@dimen/card_elevation"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@drawable/bg_textview_item_home"
                android:layout_height="@dimen/dp_68"/>
    </android.support.constraint.ConstraintLayout>

    <!--</android.support.v7.widget.CardView>-->
</layout>
