<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="item"
                type="com.app.f49.custom.AdapterBanner.ViewHolder"/>
    </data>

    <android.support.design.card.MaterialCardView
            android:id="@+id/cvBanner"
            android:layout_width="@dimen/dp_1240"
            android:layout_height="@dimen/dp_768"
            android:layout_marginTop="@dimen/card_elevation"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

        <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imageUrl="@{item.imageURL}"/>
    </android.support.design.card.MaterialCardView>

</layout>