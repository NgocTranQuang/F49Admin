<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/height_line_size"
        android:background="@color/colorWhite"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/lnImage"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/img_category"
                android:layout_width="@dimen/dp_218"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_218"
                android:background="@color/bg_play_holder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCateName"/>

        <TextView
                android:id="@+id/tvCateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/toolbar_half_padding_horizontal"
                android:textSize="@dimen/dp_30"
                android:background="@color/bg_play_holder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

    <TextView
            android:layout_width="@dimen/dp_81"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lnImage"
            android:textSize="@dimen/dp_48"
            android:elevation="@dimen/card_elevation"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_playholder_coner"
            android:layout_height="@dimen/dp_68"/>
</android.support.constraint.ConstraintLayout>