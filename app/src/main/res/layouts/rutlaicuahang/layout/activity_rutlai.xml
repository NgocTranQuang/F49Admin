<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header"
                android:stateListAnimator="@animator/toolbar_elevated"
                android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/tb"
                    style="@style/CommonToolbar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:clipToPadding="false"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/color_line_divider_light"
                android:layout_height="wrap_content">

            <android.support.design.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <Spinner
                            android:id="@+id/spSelectStore"
                            style="@style/SpinnerStore">

                    </Spinner>

                    <ImageView
                            style="@style/ImageSpinner"/>
                </RelativeLayout>
            </android.support.design.card.MaterialCardView>
        </LinearLayout>

        <View
                style="@style/LineBig"/>

        <android.support.design.widget.TabLayout
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                android:id="@+id/tbLayout"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:tabSelectedTextColor="@color/colorAccent"
                android:layout_height="wrap_content">

        </android.support.design.widget.TabLayout>


        <View
                style="@style/LineBig"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvRutLai"
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:background="@color/color_line_divider_light"
                    android:layout_marginTop="@dimen/toolbar_half_padding_horizontal"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                    android:id="@+id/tvNoData"
                    android:layout_width="wrap_content"
                    android:text="@string/no_data"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                    <include layout="@layout/row_item_playholder_camdo"/>

                    <include layout="@layout/row_item_playholder_camdo"/>

                    <include layout="@layout/row_item_playholder_camdo"/>

                    <include layout="@layout/row_item_playholder_camdo"/>

                    <include layout="@layout/row_item_playholder_camdo"/>

                    <include layout="@layout/row_item_playholder_camdo"/>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>