<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <variable
                name="item"
                type="com.app.f49.model.profile.UserProfileDTO"/>
    </data>

    <android.support.v4.widget.NestedScrollView
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <RelativeLayout
                    android:id="@+id/rlHeader"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:layout_height="@dimen/dp_600">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                    <View
                            android:layout_width="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/img"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/bg_shadow_bottom"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_height="7dp"/>

                    <ImageView
                            android:id="@+id/img"
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_header_profile"
                            android:layout_height="@dimen/dp_414"/>

                    <ImageView
                            android:id="@+id/imgUnder"
                            app:layout_constraintTop_toBottomOf="@+id/img"
                            android:layout_width="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:src="@drawable/bg_under_header_profile"
                            android:layout_below="@+id/img"
                            android:layout_height="wrap_content"/>

                    <RelativeLayout
                            android:layout_width="@dimen/dp_370"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/dp_123"
                            android:background="@drawable/bg_image_profile"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="@dimen/dp_370">

                        <ImageView
                                android:circleImageUrl="@{item.avatarURL}"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:layout_height="match_parent"/>
                    </RelativeLayout>


                </android.support.constraint.ConstraintLayout>

                <ImageView
                        android:layout_width="@dimen/dp_340"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        android:src="@drawable/ic_home_dogiadung"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_340"/>

            </RelativeLayout>

            <android.support.design.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    app:cardCornerRadius="@dimen/activity_horizontal_margin"
                    android:elevation="@dimen/activity_horizontal_margin"
                    android:shadowColor="@color/colorAccent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">

                        <TextView
                                style="@style/TextViewLeftProfile"
                                android:text="Họ và tên"
                                />

                        <TextView
                                style="@style/TextViewRightProfile"
                                android:text="@{item.fullName}"
                                />
                    </LinearLayout>

                    <View
                            style="@style/Line"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">

                        <TextView
                                style="@style/TextViewLeftProfile"
                                android:text="Ngày sinh"
                                />

                        <TextView
                                style="@style/TextViewRightProfile"
                                android:date="@{item.dateOfBirth}"
                                />
                    </LinearLayout>

                    <View
                            style="@style/Line"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">

                        <TextView
                                style="@style/TextViewLeftProfile"
                                android:text="Chức vụ"
                                />

                        <TextView
                                style="@style/TextViewRightProfile"
                                android:text="@{item.position}"
                                />
                    </LinearLayout>

                    <View
                            style="@style/Line"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">

                        <TextView
                                style="@style/TextViewLeftProfile"
                                android:text="Email"
                                />

                        <TextView
                                style="@style/TextViewRightProfile"
                                android:text="@{item.email}"
                                />
                    </LinearLayout>

                    <View
                            style="@style/Line"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">

                        <TextView
                                style="@style/TextViewLeftProfile"
                                android:text="Phòng"
                                />

                        <TextView
                                style="@style/TextViewRightProfile"
                                android:text="@{item.room}"
                                />
                    </LinearLayout>

                    <View
                            style="@style/Line"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">

                        <TextView
                                style="@style/TextViewLeftProfile"
                                android:text="Cửa hàng"
                                />

                        <TextView
                                style="@style/TextViewRightProfile"
                                android:text="@{item.store}"
                                />
                    </LinearLayout>

                    <View
                            style="@style/Line"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">

                        <TextView
                                style="@style/TextViewLeftProfile"
                                android:text="Phân quyền"
                                />

                        <TextView
                                style="@style/TextViewRightProfile"
                                android:text="@{item.permission}"
                                />
                    </LinearLayout>


                </LinearLayout>

            </android.support.design.card.MaterialCardView>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/btnStoreList"
                        android:visibility="gone"
                        style="@style/TextViewSettingProfile"
                        android:text="@string/store_default"
                        android:drawableStart="@drawable/ic_home_black_24dp"
                        />

                <!--<View-->
                <!--style="@style/Line"/>-->

                <TextView
                        android:id="@+id/btnChangePassWord"
                        style="@style/TextViewSettingProfile"
                        android:text="@string/change_pass_word"
                        android:drawableStart="@drawable/ic_change_password"
                        />

                <View
                        style="@style/Line"/>

                <TextView
                        android:visibility="gone"
                        style="@style/TextViewSettingProfile"
                        android:text="@string/config"
                        android:drawableStart="@drawable/ic_home_black_24dp"
                        />


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>