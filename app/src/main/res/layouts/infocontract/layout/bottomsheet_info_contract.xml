<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


        <TextView
                style="@style/TextViewLeftInfoCamdo"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/tac_vu"/>

    </LinearLayout>

    <View
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            style="@style/Line"/>

    <LinearLayout
            android:id="@+id/vExchangeHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                style="@style/ImageBottomSheet"
                android:src="@drawable/ic_lichsugiaodich"/>

        <TextView
                style="@style/TextViewRightInfoCamdo"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/lich_su_giao_dich"/>

        <TextView
                android:id="@+id/tvCountLichSuGiaoDich"
                style="@style/TextViewLeftInfoCamdo"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:text="( 3 )"/>

    </LinearLayout>

    <View
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            style="@style/Line"/>

    <LinearLayout
            android:id="@+id/vBorrowHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                style="@style/ImageBottomSheet"
                android:src="@drawable/ic_lichsuvay"/>

        <TextView
                style="@style/TextViewRightInfoCamdo"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/lich_su_vay"/>

        <TextView
                android:id="@+id/tvCountLichSuVay"
                style="@style/TextViewLeftInfoCamdo"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:text="( 5 )"/>

    </LinearLayout>

</LinearLayout>